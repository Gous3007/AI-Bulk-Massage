    <script>
        // Global variables
        let sidebarCollapsed = false;

        // Initialize dashboard
        document.addEventListener('DOMContentLoaded', function () {
            // Show dashboard section by default
            showSection('dashboard');

            // Initialize event listeners
            initializeEventListeners();
        });

        // Toggle sidebar
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');

            sidebarCollapsed = !sidebarCollapsed;

            if (window.innerWidth > 768) {
                if (sidebarCollapsed) {
                    sidebar.classList.add('collapsed');
                    mainContent.classList.add('expanded');
                } else {
                    sidebar.classList.remove('collapsed');
                    mainContent.classList.remove('expanded');
                }
            } else {
                sidebar.classList.toggle('show');
            }
        }

        // Show specific section
        function showSection(sectionId) {
            // Hide all sections
            const sections = document.querySelectorAll('.content-section');
            sections.forEach(section => {
                section.classList.remove('active');
            });

            // Show selected section
            const targetSection = document.getElementById(sectionId);
            if (targetSection) {
                targetSection.classList.add('active');
            }

            // Update sidebar active state
            const navLinks = document.querySelectorAll('.sidebar-nav-link');
            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === '#' + sectionId) {
                    link.classList.add('active');
                }
            });

            // Hide sidebar on mobile after selection
            if (window.innerWidth <= 768) {
                document.getElementById('sidebar').classList.remove('show');
            }
        }

        // Initialize event listeners
        function initializeEventListeners() {
            // Schedule radio buttons
            const scheduleRadios = document.querySelectorAll('input[name="schedule"]');
            const scheduleDateTime = document.getElementById('scheduleDateTime');

            scheduleRadios.forEach(radio => {
                radio.addEventListener('change', function () {
                    if (this.id === 'sendLater') {
                        scheduleDateTime.style.display = 'block';
                    } else {
                        scheduleDateTime.style.display = 'none';
                    }
                });
            });

            // Message type change
            const messageTypeRadios = document.querySelectorAll('input[name="messageType"]');
            messageTypeRadios.forEach(radio => {
                radio.addEventListener('change', function () {
                    updateMessagePreview();
                });
            });

            // Character counter for message textarea
            const messageTextarea = document.querySelector('#send-messages textarea');
            if (messageTextarea) {
                messageTextarea.addEventListener('input', function () {
                    const charCount = this.value.length;
                    const counter = this.parentNode.querySelector('small');
                    if (counter) {
                        counter.textContent = `${charCount}/1000 characters`;
                    }
                    updateMessagePreview();
                });
            }
        }

        // Update message preview
        function updateMessagePreview() {
            const messageTextarea = document.querySelector('#send-messages textarea');
            const previewText = document.querySelector('#send-messages .bg-light p');

            if (messageTextarea && previewText) {
                const message = messageTextarea.value || 'Message preview will appear here...';
                previewText.textContent = message;
            }
        }

        // Generate QR Code (mock function)
        function generateQR() {
            const qrContainer = document.querySelector('.qr-container');
            qrContainer.innerHTML = `
                <div class="text-center">
                    <div class="border border-2 border-dark p-3 d-inline-block bg-white">
                        <div style="width: 200px; height: 200px; background: repeating-conic-gradient(#000 0% 25%, white 0% 50%) 50% / 20px 20px;"></div>
                    </div>
                    <p class="text-muted mt-3">Scan this QR code with WhatsApp</p>
                    <small class="text-muted">QR code expires in 2 minutes</small>
                </div>
            `;

            // Simulate connection after 10 seconds
            setTimeout(() => {
                simulateConnection();
            }, 10000);
        }

        // Refresh QR Code
        function refreshQR() {
            const qrContainer = document.querySelector('.qr-container');
            qrContainer.innerHTML = `
                <div class="text-center">
                    <div class="spinner-border text-primary mb-3" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="text-muted">Generating new QR code...</p>
                </div>
            `;

            setTimeout(() => {
                generateQR();
            }, 2000);
        }

        // Simulate WhatsApp connection
        function simulateConnection() {
            // Update connection status in connect page
            const statusIcon = document.querySelector('#connect .fa-times-circle');
            const statusText = document.querySelector('#connect h5');
            const statusDescription = document.querySelector('#connect .text-muted');

            if (statusIcon && statusText && statusDescription) {
                statusIcon.className = 'fas fa-check-circle fa-4x status-connected mb-3';
                statusText.textContent = 'Connected';
                statusText.className = 'status-connected';
                statusDescription.textContent = 'WhatsApp successfully connected';

                // Update account info
                const listItems = document.querySelectorAll('#connect .list-group-item');
                if (listItems.length >= 3) {
                    listItems[0].innerHTML = 'Phone Number <span class="text-success">+91 98765 43210</span>';
                    listItems[1].innerHTML = 'Device Name <span class="text-success">Growfinix Dashboard</span>';
                    listItems[2].innerHTML = 'Last Seen <span class="text-success">Just now</span>';
                }
            }

            // Update dashboard status
            const dashboardStatus = document.querySelector('#dashboard .card-body');
            if (dashboardStatus) {
                const syncText = dashboardStatus.querySelector('.text-muted.small');
                if (syncText) {
                    syncText.textContent = 'Last sync: Just now';
                }
            }
        }

        // Responsive handling
        window.addEventListener('resize', function () {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');

            if (window.innerWidth > 768) {
                sidebar.classList.remove('show');
                if (!sidebarCollapsed) {
                    sidebar.classList.remove('collapsed');
                    mainContent.classList.remove('expanded');
                }
            } else {
                sidebar.classList.remove('collapsed');
                mainContent.classList.remove('expanded');
            }
        });

        // Mock functions for interactive elements
        function startCampaign() {
            alert('Campaign started successfully!');
        }

        function uploadContacts() {
            alert('Contact upload feature would open here.');
        }

        function exportReport() {
            alert('Report export would start here.');
        }

        // Simulate real-time updates
        setInterval(function () {
            // Update last sync time randomly
            const syncElements = document.querySelectorAll('.text-muted.small');
            syncElements.forEach(element => {
                if (element.textContent.includes('Last sync:')) {
                    const randomMinutes = Math.floor(Math.random() * 5) + 1;
                    element.textContent = `Last sync: ${randomMinutes} minute${randomMinutes > 1 ? 's' : ''} ago`;
                }
            });
        }, 60000); // Update every minute

        // Add click handlers for action buttons
        document.addEventListener('click', function (e) {
            // Handle various button clicks
            if (e.target.matches('.btn') || e.target.closest('.btn')) {
                const button = e.target.matches('.btn') ? e.target : e.target.closest('.btn');

                // Add loading state for certain actions
                if (button.textContent.includes('Generate') || button.textContent.includes('Send') || button.textContent.includes('Save')) {
                    const originalText = button.innerHTML;
                    button.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Processing...';
                    button.disabled = true;

                    setTimeout(() => {
                        button.innerHTML = originalText;
                        button.disabled = false;
                    }, 2000);
                }
            }
        });
    </script>
