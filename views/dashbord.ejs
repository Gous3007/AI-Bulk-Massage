        </div>

        <!-- Connect WhatsApp Section -->
        <div id="connect" class="content-section">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Connect WhatsApp</h2>
                <button class="btn btn-outline-secondary" onclick="refreshQR()">
                    <i class="fas fa-sync me-2"></i>Refresh QR Code
                </button>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5>Scan QR Code</h5>
                        </div>
                        <div class="card-body">
                            <div class="qr-container mb-3">
                                <div class="text-center">
                                    <i class="fas fa-qrcode fa-5x text-muted mb-3"></i>
                                    <p class="text-muted">QR Code will appear here</p>
                                    <button class="btn btn-primary" onclick="generateQR()">Generate QR Code</button>
                                </div>
                            </div>
                            <div class="alert alert-info">
                                <strong>Instructions:</strong>
                                <ol class="mb-0 mt-2">
                                    <li>Open WhatsApp on your phone</li>
                                    <li>Go to Settings → Linked Devices</li>
                                    <li>Tap "Link a Device"</li>
                                    <li>Scan the QR code above</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5>Connection Status</h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-4">
                                <i class="fas fa-times-circle fa-4x status-disconnected mb-3"></i>
                                <h5 class="status-disconnected">Not Connected</h5>
                                <p class="text-muted">Please scan the QR code to connect</p>
                            </div>
                            <div class="list-group">
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    Phone Number
                                    <span class="text-muted">Not available</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    Device Name
                                    <span class="text-muted">Not available</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    Last Seen
                                    <span class="text-muted">Not available</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Send Messages Section -->
        <div id="send-messages" class="content-section">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Send Messages</h2>
                <button class="btn btn-success">
                    <i class="fas fa-paper-plane me-2"></i>Send Campaign
                </button>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5>Compose Message</h5>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="mb-3">
                                    <label class="form-label">Message Type</label>
                                    <div class="btn-group w-100" role="group">
                                        <input type="radio" class="btn-check" name="messageType" id="individual"
                                            checked>
                                        <label class="btn btn-outline-primary" for="individual">Individual</label>
                                        <input type="radio" class="btn-check" name="messageType" id="group">
                                        <label class="btn btn-outline-primary" for="group">Group</label>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Upload Contacts</label>
                                    <input type="file" class="form-control" accept=".csv,.xlsx">
                                    <div class="form-text">Upload CSV or Excel file with phone numbers</div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Message Content</label>
                                    <textarea class="form-control" rows="5"
                                        placeholder="Type your message here..."></textarea>
                                    <div class="d-flex justify-content-between mt-2">
                                        <button type="button" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-magic me-2"></i>Generate with AI
                                        </button>
                                        <small class="text-muted">0/1000 characters</small>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Attach Media (Optional)</label>
                                    <input type="file" class="form-control" accept="image/*,video/*,.pdf">
                                    <div class="form-text">Supported formats: Images, Videos, PDF</div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Schedule Options</label>
                                    <div class="btn-group w-100" role="group">
                                        <input type="radio" class="btn-check" name="schedule" id="sendNow" checked>
                                        <label class="btn btn-outline-secondary" for="sendNow">Send Now</label>
                                        <input type="radio" class="btn-check" name="schedule" id="sendLater">
                                        <label class="btn btn-outline-secondary" for="sendLater">Schedule</label>
                                    </div>
                                </div>

                                <div class="row mb-3" id="scheduleDateTime" style="display: none;">
                                    <div class="col-md-6">
                                        <label class="form-label">Date</label>
                                        <input type="date" class="form-control">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Time</label>
                                        <input type="time" class="form-control">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5>Preview</h5>
                        </div>
                        <div class="card-body">
                            <div class="border rounded p-3 bg-light">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="bg-success rounded-circle p-2 me-2">
                                        <i class="fab fa-whatsapp text-white"></i>
                                    </div>
                                    <strong>Your Business</strong>
                                </div>
                                <p class="mb-0 text-muted">Message preview will appear here...</p>
                            </div>
                        </div>
                    </div>

