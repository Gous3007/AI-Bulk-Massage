        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            line-height: 1.6;
        }

        .hero-section {
            background-color: var(--white);
            padding: 80px 0;
            min-height: 70vh;
        }

        .hero-content h1 {
            font-size: 3rem;
            font-weight: 700;
            color: var(--dark-blue);
            margin-bottom: 1rem;
        }

        .hero-content p {
            font-size: 1.25rem;
            color: var(--medium-gray);
            margin-bottom: 2rem;
        }

